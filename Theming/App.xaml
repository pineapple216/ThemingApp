<?xml version="1.0" encoding="utf-8"?>

<Application
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:Theming.Resources"
	x:Class="Theming.App">

	<Application.Resources>

        <ResourceDictionary>
            <Color x:Key="lbgc">#000000</Color>
            <Color x:Key="ltc">#FFFFFF</Color>

            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="BackgroundColor" Value="{DynamicResource lbgc}" />
                <Setter Property="TextColor" Value="{DynamicResource ltc}" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>

            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#123666" />
                <Setter Property="TextColor" Value="#FFFFFF" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>
        </ResourceDictionary>
        
	</Application.Resources>

</Application>
